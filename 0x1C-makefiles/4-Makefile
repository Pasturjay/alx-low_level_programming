RM = rm -f
CC = gcc
SRC = main.c school.c
OBJ = ${SRC:%.c=%.o}
NAME = school
CFLAGA = -wall -werror -wextra -pedantic

%.0: %.c m.h
	${CC} ${CFLAGS} -c -o $@ $<

all: ${OBJ}
	${CC} ${CFLAGS} ${OBJ} -o ${NAME}

clean:
	${RM} *~ ${NAME}

oclean:
	${RM} ${OBJ}

fclean: 
	${RM} *~ ${NAME}
	${RM} ${OBJ}

re: oclean all
	
